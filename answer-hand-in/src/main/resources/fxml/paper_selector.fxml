<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="selector" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" stylesheets="@../css/paper_selector.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PaperSelectorController">
   <children>
      <HBox prefHeight="50.0">
         <children>
            <ComboBox fx:id="subjectSelector" prefHeight="40.0" prefWidth="300.0" promptText="选择科目">
               <HBox.margin>
                  <Insets left="10.0" top="10.0" />
               </HBox.margin>
            </ComboBox>
            <Button fx:id="addSubjectBtn" mnemonicParsing="false" onAction="#addSubject" text="+  添加科目" visible="false">
               <HBox.margin>
                  <Insets left="20.0" top="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="addPaperBtn" mnemonicParsing="false" onAction="#addPaper" text="+  添加试卷" visible="false">
               <HBox.margin>
                  <Insets top="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <ScrollPane fx:id="slider">
         <content>
            <VBox fx:id="container">
               <padding>
                  <Insets left="20.0" />
               </padding></VBox>
         </content>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </ScrollPane>
   </children>
</VBox>
